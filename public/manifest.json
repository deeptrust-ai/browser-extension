{
    "manifest_version": 3,
    "name": "DeepTrust",
    "description": "Deepfake Speech Detection browser extension.",  
    "version": "0.0.1",    
    "action": {
      "default_popup": "popup.html",
      "default_title": "DeepTrust Buddy",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "author": "aman@deeptrust.gg",
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "storage",
      "tabs",
      "activeTabs"
    ]
}
